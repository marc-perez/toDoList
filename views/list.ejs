<%- include("header") -%>

  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">

    <% newTodos.forEach(function(posts) { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= posts._id %>" onChange="this.form.submit()">
          <p>
            <%= posts.name %>
          </p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
      <% }) %>

        <form class="item" action="/" method="post">
          <input type="text" name="newTodo" placeholder="New Item">
          <button type="submit" name="list" value=<%=listTitle %> >+</button>
        </form>
  </div>

  <%- include("footer") -%>